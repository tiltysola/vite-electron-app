{
  "name": "vite-electron-app",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "description": "vite-electron-app",
  "homepage": "https://github.com/tiltysola/vite-electron-app",
  "license": "MIT",
  "author": {
    "name": "TiltySola",
    "email": "tilty.sola@gmail.com"
  },
  "repository": {
    "url": "https://github.com/tiltysola/vite-electron-app.git"
  },
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "fix": "eslint --fix ."
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/x": "^2.1.0",
    "@radix-ui/themes": "^3.2.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.19",
    "electron-updater": "^6.3.9",
    "less": "^4.4.2",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-config-ali": "^16.5.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-eslint": "^1.8.1"
  }
}
